<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/featuredImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <com.android.nazirshuqair.lastpick.textViewHelper.AutoResizeTextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="New Text"
        android:id="@+id/featuredName"
        android:layout_alignBottom="@+id/featuredImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="#aa484848"
        android:textColor="#ffffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="New Text"
        android:id="@+id/featuredPhone"
        android:layout_below="@+id/featuredImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#198CFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:text="New Text"
        android:id="@+id/featuredAddress"
        android:layout_below="@+id/featuredPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:lines="4"
        android:layout_margin="20dp"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore"
        android:id="@+id/restore"
        android:layout_below="@+id/featuredAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp" />
</RelativeLayout>